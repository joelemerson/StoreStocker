<!-- Layout for a single list item in the list of items -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/name_list"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#2B3D4D"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:fontFamily="sans-serif"
        android:text="@string/description_list"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#AEB6BD"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif"
        android:text="@string/_4_00_value"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#AEB6BD"/>

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/price"
        android:fontFamily="sans-serif"
        android:text="@string/price_text"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#AEB6BD"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/price"
        android:fontFamily="sans-serif"
        android:text="@string/_100_value"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#AEB6BD"/>

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_toLeftOf="@id/quantity"
        android:fontFamily="sans-serif"
        android:text="@string/quantity_list"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#AEB6BD"/>

    <Button
        android:id="@+id/salebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity"
        android:layout_margin="8dp"
        android:focusable="false"
        android:text="@string/sale_button_list"/>

</RelativeLayout>